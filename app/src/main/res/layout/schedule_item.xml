<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="12dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Schedule details -->
        <TextView
            android:id="@+id/tvScheduleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2025-07-15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvScheduleTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher: Katy" />

        <TextView
            android:id="@+id/tvScheduleComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment: Bring your own mat." />

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDeleteSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="#B00020" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
