<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="12dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Schedule details -->
        <TextView
            android:id="@+id/tvScheduleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2025-07-15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvScheduleTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher: Katy" />

        <TextView
            android:id="@+id/tvScheduleComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment: Bring your own mat." />

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnEditSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit"
                android:layout_marginEnd="8dp"
                app:tint="@android:color/black" />

            <ImageButton
                android:id="@+id/btnDeleteSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete"
                app:tint="@android:color/holo_red_dark" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
